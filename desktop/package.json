{
  "name": "547-desktop",
  "version": "1.0.0",
  "private": true,
  "description": "547 Node+Wallet Desktop (P2P bridge + UI)",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder -c.extraMetadata.main=main.js"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.block547.desktop",
    "productName": "547 Desktop",
    "files": [
      "dist/**",
      "main.js",
      "preload.js",
      "bin/**"
    ],
    "extraResources": [
      { "from": "bin", "to": "bin" }
    ],
    "directories": { "output": "release" },
    "win": { "target": ["nsis"], "icon": "dist/icons/icon-512.png" },
    "mac": { "target": ["dmg"], "category": "public.app-category.finance", "icon": "dist/icons/icon-512.png" },
    "linux": { "target": ["AppImage"], "category": "Finance", "icon": "dist/icons/icon-512.png" },
    "publish": [{ "provider": "github" }]
  }
}
